<div class="container mt-4">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <%= render partial: "shared/errors", locals: { resource: post } %>
    <% end %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control", placeholder:"Enter title", required: true %>
    </div>
    <div class="form-group pt-4">
      <%= form.label :image %>
      <%= form.file_field :image, class:"form-control", required: true %>
    </div>
    <%= form.submit "Submit", class:"btn btn-primary mt-4 mb-4" %>
  <% end %>
</div>
