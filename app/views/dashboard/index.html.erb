<div class="container pt-5">
  <h2>Welcome to Test Blog</h2>
    <div class="pt-4">
    <% if user_signed_in? %>
      <div class="row">
        <div class="col-6">
          Signed in as <%= current_user.email %>
        </div>
        <div class="col-6 d-flex justify-content-end">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
      <%= render partial: "shared/posts_data", locals: { posts: @posts } %>
    <% else %>
      <%= link_to 'Register', new_user_registration_path, class:"btn btn-primary" %> | <%= link_to 'Sign in', new_user_session_path, class:"btn btn-success" %>
    <% end %>
  </div>
</div>